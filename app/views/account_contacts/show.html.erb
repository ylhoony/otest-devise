<% if params.include?(:customer_id) %>
  <h3><%= link_to @account.name, customer_path(@account) %> - Contact</h3>
  <h4><%= link_to "Edit", edit_customer_account_contact_path(@account, @account_contact) %> || <%= link_to "Delete", customer_account_contact_path(@account, @account_contact), method: :delete %> </h4>
<% end %>

<% if params.include?(:supplier_id) %>
  <h3><%= link_to @account.name, supplier_path(@account) %> - contact</h3>
  <h4><%= link_to "Edit", edit_supplier_account_contact_path(@account, @account_contact) %> || <%= link_to "Delete", supplier_account_contact_path(@account, @account_contact), method: :delete %> </h4>
<% end %>


<p>First Name: <%= @account_contact.first_name %></p>
<p>Last Name: <%= @account_contact.last_name %></p>
<p>Job Title: <%= @account_contact.job_title %></p>
<p>Email: <%= @account_contact.email %></p>
<p>Phone: <%= @account_contact.phone %></p>
<p>Mobile: <%= @account_contact.mobile %></p>
<p>Fax: <%= @account_contact.fax %></p>
<p>Comment : <%= @account_contact.comment %></p>
<p>Active?: <%= check_box "account_contact", "active", { checked: @account_contact.active, disabled: true } %></p>
