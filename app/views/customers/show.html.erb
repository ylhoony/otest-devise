<h3>Customer Information</h3>

<p><%= link_to "Edit", edit_customer_path(@customer) %> || <%= link_to "Delete", @customer, method: :delete %></p>
<p><%= link_to "See All Addresses", customer_account_addresses_path(@customer) %> || "See All Contacts" </p>
<p><%= link_to "Add New Address", new_customer_account_address_path(@customer) %> || "Add New Contact" </p>

<p>Customer Name: <%= @customer.name %></p>
<p>Tax ID Number: <%= @customer.tax_id_number %></p>
<p>Payment Term: <% if @customer.payment_term %> <%= @customer.payment_term.name %> <% end %></p>
<p>Currency: <%= @customer.currency.name %></p>
<p>Default Shipping Warehouse: <% if @customer.warehouse %> <%= @customer.warehouse.name %> <% end %></p>
<p>Comment: <%= @customer.comment %></p>
<p>Active?: <%= check_box "customer", "active", { checked: @customer.active, disabled: true } %></p>

