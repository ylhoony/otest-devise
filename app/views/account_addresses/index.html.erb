<% if params.include?(:customer_id) %>
  <h3><%= link_to @account.name, customer_path(@account) %> - addresses</h3>

  <% @account_addresses.each do |addr| %>
    <%= link_to addr.company_name, customer_account_address_path(@account, addr) %><br/>
  <% end %>
<% end %>

<% if params.include?(:supplier_id) %>
  <h3><%= link_to @account.name, supplier_path(@account) %> - addresses</h3>

  <% @account_addresses.each do |addr| %>
    <%= link_to addr.company_name, supplier_account_address_path(@account, addr) %><br/>
  <% end %>
<% end %>