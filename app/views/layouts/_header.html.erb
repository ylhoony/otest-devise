<header>
    <% if user_signed_in? %>
      <% if current_user.current_company %>
        <h4><%= current_user.current_company.name %></h4>
      <% end %>
      <ul>
        <li><%= link_to "Move", companies_path%></li>
        <% if current_user.current_company %>
          <li><%= link_to "Dashboard", dashboard_path %></li>
          <li><%= link_to "Demand", demand_path %></li>
          <li><%= link_to "Supply", supply_path %></li>
          <li><%= link_to "Product", product_path %></li>
          <li><%= link_to "Warehouse", warehouse_path %></li>
          <li><%= link_to "Logistics", logistics_path %></li>
          <li><%= link_to "Setup", setup_path %></li>
        <% end %>
        <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <ul>
        <li><%= link_to "Sign in", new_user_session_path %></li>
        <li><%= link_to "Sign up", new_user_registration_path %></li>
    <% end %>
  </ul>
</header>

