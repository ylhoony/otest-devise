<h3>Products List</h3>
<%= link_to "Add New Product", new_product_path %>

<% if @products.size > 0 %>
  <table>
    <tr>
      <th>Product Type</th>
      <th>Product Group</th>
      <th>SKU</th>
      <th>Product Name</th>
      <th>Unit of Measure</th>
      <th>Unit Price</th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_type.name %></td>
        <td><%= product.product_group.name %></td>
        <td><%= link_to product.sku, product_path(product) %></td>
        <td><%= product.name %></td>
        <td><%= product.unit_of_measure.name %></td>
        <td><%= number_to_currency(product.price) %></td>
      </tr>
    <% end %>
  </table>

  <% else %>
   <p>There is no Product available</p>
  <% end %>
