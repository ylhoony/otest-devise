<% if @payment_option.errors.any? %>
  <% @payment_option.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>


<%= form_for @payment_option do |f| %>

  <%= f.label :name, "Payment Option Name: "%>
  <%= f.text_field :name %><br/>

  <%= f.label :active, "Active?" %>
  <%= f.hidden_field :active, value: 0 %>
  <%= f.check_box :active %><br/>

  <%= f.submit %>

<% end %>